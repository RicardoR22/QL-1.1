    "def salary_amt(base_salary, rate, years):\n",
    "    current_salary = base_salary \n",
    "    \n",
    "    for x in range(years):\n",
    "        current_salary = current_salary * (1 + rate)\n",
    "    \n",
    "    \n",
    "    return current_salary"
   ]
